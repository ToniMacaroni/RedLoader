{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/build",
  "title": "Build Schema",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Debug": {
          "type": "boolean",
          "description": "Debug"
        },
        "GamePath": {
          "type": "string",
          "description": "Game path"
        },
        "GithubToken": {
          "type": "string",
          "description": "Github token"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitbucket",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "LoadIntoMain": {
          "type": "boolean",
          "description": "Load into main"
        },
        "LoadSave": {
          "type": "string",
          "description": "Load Savegame"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "NoZip": {
          "type": "boolean",
          "description": "No Zip"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "RestorePackages": {
          "type": "boolean",
          "description": "Restore packages"
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "ShouldCopyToGame": {
          "type": "boolean",
          "description": "Should the build be copied to the game folder"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "Clean",
              "Compile",
              "CompileSdk",
              "Pack",
              "ProcessDoc",
              "Restore",
              "Upload"
            ]
          }
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "StartGame": {
          "type": "boolean",
          "description": "Run the game after completion"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "Clean",
              "Compile",
              "CompileSdk",
              "Pack",
              "ProcessDoc",
              "Restore",
              "Upload"
            ]
          }
        },
        "TestPack": {
          "type": "boolean",
          "description": "Test Pack in game"
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}
